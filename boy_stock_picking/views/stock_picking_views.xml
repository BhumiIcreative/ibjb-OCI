<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <!-- Define a new record for the view modification -->
    <record id="view_stock_lots_form" model="ir.ui.view">
        <field name="name">Lots stock picking view form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']//tree//field[@name='product_uom_qty']"
                   position="before">
                <!-- Add the 'actual_lot_count' field -->
                <field name="actual_lot_count"/>
                  <!-- Add the 'actual_lot_id' field with a domain filter -->
                <field name="actual_lot_id" domain="[('product_id', '=', product_id)]"/>
                  <!-- Add the 'life_date' field -->
                <field name="life_date"/>
            </xpath>
            <field name="location_id" position="attributes">
                <attribute name="domain">['|',('company_id', '=', company_id), ('company_id', '=', False)]</attribute>
            </field>
            <field name="location_dest_id" position="attributes">
                <attribute name="domain">['|',('company_id', '=', company_id), ('company_id', '=', False)]</attribute>
            </field>
        </field>
    </record>
</odoo>
