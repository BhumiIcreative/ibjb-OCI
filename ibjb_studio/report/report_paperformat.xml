<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
<!--        Paper Format of Sales Report-->
        <record id="paperformat_report_template" model="report.paperformat">
            <field name="name">Paper format for Report Templates</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">30</field>
            <field name="dpi">90</field>
        </record>

        <record id="paperformat_report_template_equipement_maintenance" model="report.paperformat">
            <field name="name">Paper format for Report Templates</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">30</field>
            <field name="dpi">90</field>
        </record>
    </data>
</odoo>
