    <record id="action_maintenance_request_report" model="ir.actions.report">
        <field name="name">Maintenance Request Report</field>
        <field name="model">maintenance.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ibjb_studio.maintenance_request_report_template</field>
