<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Action for Intra-Community CE Invoice PDF report -->
    <record id="account_move_facture_ce_intracommunautaire" model="ir.actions.report">
        <field name="name">Intra-Community CE Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ibjb_studio.facture_ce_intracommunautaire_template</field>
        <field name="report_file">ibjb_studio.facture_ce_intracommunautaire_template</field>
        <field name="print_report_name">'Intra-Community CE Invoice'</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Action for Non-EC Export Invoice PDF report -->
    <record id="account_move_facture_export_non_ce" model="ir.actions.report">
        <field name="name">Non-EC Export Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ibjb_studio.facture_export_non_ce_template</field>
        <field name="report_file">ibjb_studio.facture_export_non_ce_template</field>
        <field name="print_report_name">'Non-EC Export Invoice'</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Action for France Invoice PDF report -->
    <record id="account.account_invoices" model="ir.actions.report">
        <field name="name">France invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">account.report_invoice_with_payments</field>
        <field name="report_file">account.report_invoice_with_payments</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="attachment"/>
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="binding_type">report</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice')),
 (4, ref('account.group_account_readonly'))]"/>
    </record>

    <!-- Action for Facto Invoice (cic) PDF report -->
    <record id="account_move_facture_facto_cic" model="ir.actions.report">
        <field name="name">Facto Invoice (cic)</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ibjb_studio.facture_facto_cic_template</field>
        <field name="report_file">ibjb_studio.facture_facto_cic_template</field>
        <field name="print_report_name">'Facto Invoice (cic)'</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Action for VAT Exemption Invoice PDF report -->
    <record id="account_move_facture_franchise_de_tva_template" model="ir.actions.report">
        <field name="name">VAT Exemption Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field eval="[(6, 0, [ref('account.group_account_invoice')])]" name="groups_id"/>
        <field name="report_name">ibjb_studio.facture_franchise_de_tva_template</field>
        <field name="report_file">ibjb_studio.facture_franchise_de_tva_template</field>
        <field name="print_report_name">'VAT Exemption Invoice'</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>
</odoo>