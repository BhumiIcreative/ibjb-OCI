<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="maintenance_request_sending_loan_material_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row">
                            <div class="col h2">
                                <span style="margin-left:160px;">
                                    <b>
                                        SENDING LOAN MATERIAL
                                    </b>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <span>
                                    <b>
                                        <font style="font-size: 24px;">Date sent :</font>
                                    </b>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <h3>
                                        <b>
                                            <font style="font-size: 24px;">Customer : </font>
                                            <span t-field="doc.maintenance_contact.display_name"/>
                                        </b>
                                    </h3>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span> </span>
                            </div>
                        </div>

                        <table class="table o_report_block_table">
                            <thead>
                                <tr>
                                    <th style="background-color:#003163;color:#FFFFFF;text-align:left;">
                                        <span>SUBJECT OF INTERVENTION</span>
                                    </th>
                                    <th style="background-color:#003163;color:#FFFFFF;text-align:left;">
                                        <span>LOAN EQUIPMENT</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="docs" t-as="table_line">
                                    <td style="color:black;">
                                        <span t-field="table_line.display_name"/>
                                    </td>
                                    <td style="background-color:white;">
                                        <span t-field="table_line.equipment_id.display_name"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="row">
                            <div class="col">
                                <span> </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <b>
                                        <font style="font-size: 24px;">Beyond the loaned K-Matic, the items that must be
                                            in the package are :
                                        </font>
                                    </b>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span> </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="background-color: rgb(255, 255, 255); color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Completed IBJB decontamination certificate signed for the loan K-Matic
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="background-color: rgb(255, 255, 255); color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Loan equipment transport tracking sheet completed and signed on the "outbound"
                                        section
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Transport bottles
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ K-Matic Paper User Manual
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Pre-filled customer decontamination certificate, to be completed and signed by
                                        the customer when sending their K-Matic to be repaired
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Pre-filled customer equipment transport tracking sheet, to be completed
                                        signed by the customer) sending their K-Matic to be repaired
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Transport slip for K-Matic removal to be repaired (if date agreed)
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ “Top” / “Bottom” / “Fragile” labels on the box
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ BL automaton
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>