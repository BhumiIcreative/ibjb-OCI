<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="maintenance_request_sending_customer_material">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">

                        <div class="row">
                            <div class="col h2">
                                <span style="margin-left:100px;">RETURN OF CUSTOMER EQUIPMENT REPAIRED</span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <b>
                                        <font style="font-size: 24px;">Date sent : </font>
                                    </b>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <h3>
                                        <b>
                                            <font style="font-size: 24px;">Customer : </font>
                                        </b>
                                        <span t-field="doc.maintenance_contact.display_name"/>
                                    </h3>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col h2">
                                <span> </span>
                            </div>
                        </div>

                        <table class="table o_report_block_table">
                            <thead>
                                <tr>
                                    <th style="background-color:#003163;color:#FFFFFF;">
                                        <span>SUBJECT OF INTERVENTION</span>
                                    </th>
                                    <th style="background-color:#003163;color:#FFFFFF;">
                                        <span>equipment</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="docs" t-as="table_line">
                                    <td>
                                        <span t-field="table_line.display_name"/>
                                    </td>
                                    <td style="background-color:#FFFFFF">
                                        <span t-field="doc.display_name"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="row">
                            <div class="col">
                                <span> </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <font style="font-size: 24px;">
                                        <b>Beyond the repaired K-Matic, the items that should be in the package are :
                                        </b>
                                    </font>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span> </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                    □ Completed IBJB decontamination certificate signed for the K-Matic client
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                    □ Customer equipment transport tracking sheet completed and signed by IBJB
                                    on the "return" section
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                    □ Transport bottles
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Intervention report completed/signed if applicable
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Completed/signed maintenance certificate if applicable
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Pre-filled customer decontamination certificate, to be completed and signed by
                                        the customer when returning the loan K-Matic
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Transport slip for K-Matic loan collection (if date agreed)
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ “Top” / “Bottom” / “Fragile” labels on the box
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>