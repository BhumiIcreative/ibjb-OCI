<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="maintenance_request_loan_equipment_removal_checklist">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row">
                            <div class="col h2">
                                <span style="margin-left:10px;">REMOVAL OF LOAN EQUIPMENT FOR RECOVERY</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <span>
                                    <b>
                                        <font style="font-size: 24px;">Agreed pick-up date :</font>
                                    </b>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <span>
                                    <h3>
                                        <font style="font-size: 24px;">Client :</font>
                                        <span t-field="doc.maintenance_contact_id.display_name"/>
                                    </h3>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <span> </span>
                            </div>
                        </div>
                        <table class="table o_report_block_table">
                            <thead>
                                <tr>
                                    <th style="background-color:#003163;color:#FFFFFF;">
                                        <span>SUBJECT OF INTERVENTION</span>
                                    </th>
                                    <th style="background-color:#003163;color:#FFFFFF;">
                                        <span>EQUIPMENT READY</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="docs" t-as="table_line">
                                    <td>
                                        <span t-field="table_line.display_name"/>
                                    </td>
                                    <td style="background-color:#FFFFFF">
                                        <span t-field="table_line.equipment_id.display_name"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="row">
                            <div class="col">
                                <span> </span>
                            </div>
                        </div>

                        <div class="row">
                        </div>

                        <div class="row">
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <font style="font-size: 24px;">
                                        <b>Beyond the loaned K-Matic, the items that must be in the package are :</b>
                                    </font>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span> </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Completed customer decontamination certificate signed by the customer
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Loan equipment transport tracking sheet completed and signed by the customer
                                        on the "return" section
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Transport bottles
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Original box or from the loan machine + labels "Top" / "Bottom" / "Fragile"
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span> </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <font style="font-size: 24px;">
                                        <b>On the package must be affixed :</b>
                                    </font>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span> </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <span>
                                    <span style="color: rgb(73, 80, 87); font-family: Noto, &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-size: 18px;">
                                        □ Transport slip provided by IBJB
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
