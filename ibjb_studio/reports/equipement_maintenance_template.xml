<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_external_layouts_for_header_footer_equipement_maintenance_template">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <t t-out="0"/>
        <div class="footer" style="color:black!important;">
            <div class="text-left"
                 style="color:black;!important;font-size: 10px !important;">
                <!--                <div t-if="report_type == 'pdf'" align="center">-->
                <!--                    Page:-->
                <!--                    <span class="page"/>-->
                <!--                    /-->
                <!--                    <span class="topage"/>-->
                <!--                </div>-->
            </div>
        </div>
    </template>

    <template id="report_equipement_maintenance_without_header_data">
        <t t-call="ibjb_studio.custom_external_layouts_for_header_footer_equipement_maintenance_template">
            <t t-if="not o" t-set="o" t-value="doc"/>
            <div class="page" style="font-size: 0.8rem;padding-left:0px;color:black;!important;">
                <div class="article o_report_layout_boxed"
                     t-att-data-oe-model="o and o._name"
                     t-att-data-oe-id="o and o.id"
                     t-att-data-oe-lang="o and o.env.context.get('lang')">
                    <t t-set="colclass" t-value="('col-md-5' if report_type == 'html' else 'col-5') + ' ml-auto'"/>
                    <t t-set="o" t-value="doc.with_context(lang=lang)"/>
                    <page style="font-size: 1rem;">
                        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                        <div class="" style="font-size:1rem;">
                            <div style="text-align: left;">
                                <div style="margin-bottom: 10px;">
                                    <img t-if="doc.company_id.logo"
                                         t-att-src="image_data_uri(doc.company_id.logo)"
                                         alt="Logo"
                                         class="img img-fluid"
                                         style="width: 15%; height: auto;"/>
                                </div>
                                <div class="row">
                                    <div class="col"
                                         style="margin-left: 13%; font-size: 24px;color: #E46F78 !important;">
                                        <span>
                                            EQUIPMENT SHEET :
                                        </span>
                                        <span style="margin-left: 1%;" t-field="doc.name"/>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <div class="col-12" style="font-size: 1rem; color: black; line-height: 1.8;">
                                <div class="row">
                                    <div class="col-6" style="text-align: left;">
                                        <strong>
                                            <span>Owner :</span>
                                        </strong>
                                        <br/>
                                        <strong>
                                            <span>Contract in place :</span>
                                        </strong>
                                    </div>
                                    <div class="col-6" style="text-align: left;">
                                        <strong>
                                            <span>Customer code :</span>
                                        </strong>
                                        <br/>
                                        <strong>
                                            <span>End of validity :</span>
                                        </strong>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <table class="table table-border" style="border:0 solid transparent;">
                                <tbody style="display: table-row-group; font-size: 1rem;">
                                    <tr>
                                        <td style="text-align: left; border-right: hidden;background-color: #A5C6CE;color:black;width:16%;">
                                            <strong>Serial number</strong>
                                        </td>
                                        <td style="text-align: left;border-right: hidden;background-color: #A5C6CE;color:black;width:12%;">
                                            <strong>Version</strong>
                                        </td>
                                        <td style="text-align: left;border-right: hidden;background-color: #A5C6CE;color:black;width:16%;">
                                            <strong>Date Updated</strong>
                                        </td>
                                        <td style="text-align: left;border-right: hidden;background-color: #A5C6CE;color:black;width:16%;">
                                            <strong>Date of inspection upon receipt</strong>
                                        </td>
                                        <td style="text-align: left;border-right: hidden;background-color: #A5C6CE;color:black;width:16%;">
                                            <strong>Installation date</strong>
                                        </td>
                                        <td style="text-align: left;border-right: hidden;background-color: #A5C6CE;color:black;width:16%;">
                                            <strong>End of Warranty Date</strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: left; border-right: hidden;background-color: #CEDEE7;color:black;">
                                            <span t-field="doc.serial_no"/>
                                        </td>
                                        <td style="text-align: left;border-right: hidden;background-color: #CEDEE7;color:black;">
                                            <!--                                            <strong><span t-field="doc."></strong>-->
                                        </td>
                                        <td style="text-align: left;border-right: hidden;background-color: #CEDEE7;color:black;">
                                            <!--                                            <strong>Date MÃ j</strong>-->
                                        </td>
                                        <td style="text-align: left;border-right: hidden;background-color: #CEDEE7;color:black;">
                                            <span t-field="doc.effective_date"/>
                                        </td>
                                        <td style="text-align: left;border-right: hidden;background-color: #CEDEE7;color:black;">
                                            <span t-field="doc.assign_date"/>
                                        </td>
                                        <td style="text-align: left;border-right: hidden;background-color: #CEDEE7;color:black;">
                                            <span t-field="doc.warranty_date"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br/>
                            <div class="row">
                                <div class="col">
                                    <span>
                                        <p style="font-size:1rem; color:black;">
                                            <strong>MAINTENANCE / INTERVENTION HISTORY (P=Preventive / C=Curative)
                                            </strong>
                                        </p>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <table class="table table-border" style="border:0 solid transparent;">
                            <thead style="font-size: 1rem;">
                                <tr style="background-color: #636363;">
                                    <th style="text-align: left; border:0 solid transparent;width:50px;color:white;">
                                        <span style="text-transform: capitalize;">Opening date</span>
                                    </th>
                                    <th style="text-align: left;border:0 solid transparent;width:50px;color:white;">
                                        <span style="text-transform: capitalize;">Closing date</span>
                                    </th>
                                    <th style="text-align: left;border:0 solid transparent;color:white;width:230px;">
                                        <span style="text-transform: capitalize;">Title</span>
                                    </th>
                                    <th style="text-align: left;border:0 solid transparent;width:50px;color:white;">
                                        <span style="text-transform: capitalize;">Description</span>
                                    </th>
                                    <th style="text-align: left;border:0 solid transparent;color:white;">
                                        <span style="text-transform: capitalize;">Solution</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody style="font-size: 1rem;">
                                <t t-foreach="doc.maintenance_ids" t-as="maintenance">
                                    <tr>
                                        <td style="text-align: left;border:0 solid transparent;color:black;background-color: #EFEFEF;">
                                            <span t-field="maintenance.create_date" t-options='{"format": "MM/dd/yyyy"}'/>
                                        </td>
                                        <td style="text-left: left;border:0 solid transparent;color:black;background-color: #EFEFEF;">
                                            <span t-field="maintenance.close_date"
                                                  t-options='{"format": "MM/dd/yyyy"}'/>
                                        </td>
                                        <td style="text-align: left;border:0 solid transparent;color:black;background-color: #EFEFEF;">
                                            <span t-field="maintenance.name"/>
                                        </td>
                                        <td style="text-align: left;border:0 solid transparent;color:black;background-color: #EFEFEF;">
<!--                                            <span style="width:100px;" t-field="maintenance.description"/>-->
                                        </td>
                                        <td style="text-align: left;border:0 solid transparent;color:black;background-color: #EFEFEF;">
                                            <!--                                            <span t-field="maintenance.name"/>-->
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </page>
                </div>
            </div>
        </t>
    </template>

    <template id="report_equipement_maintenance_action">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="lang" t-value="doc.partner_id.lang"/>
                <t t-call="ibjb_studio.report_equipement_maintenance_without_header_data"
                   t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>