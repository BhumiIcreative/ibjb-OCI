<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Define a new form view for the helpdesk.source model -->
    <record id="helpdesk_ticket_source_form_view" model="ir.ui.view">
        <field name="name">helpdesk.ticket.source.form.view</field>
        <field name="model">helpdesk.source</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="helpdesk_source">
                    <div class="oe_title">
                        <!-- Required field for the source name -->
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

      <!-- Define an action for the helpdesk source -->
    <record id="action_helpdesk_source" model="ir.actions.act_window">
        <field name="name">Helpdesk Source</field>
        <field name="res_model">helpdesk.source</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No source found. Let's create one!
            </p>
        </field>
    </record>


    <!-- Add a new submenu under the helpdesk configuration menu -->
        <record id="helpdesk_source_menu" model="ir.ui.menu">
            <field name="name">Source</field>
            <field name="parent_id" ref="helpdesk.helpdesk_menu_config"/>
            <field name="action" ref="action_helpdesk_source"/>
            <field name="sequence">12</field>
        </record>
</odoo>
