<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="helpdesk_ticket_source_form_view" model="ir.ui.view">
        <field name="name">helpdesk.ticket.source.form.view</field>
        <field name="model">helpdesk.source</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="helpdesk_source">
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_helpdesk_source" model="ir.actions.act_window">
        <field name="name">Helpdesk Source</field>
        <field name="res_model">helpdesk.source</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No product found. Let's create one!
            </p>
            <p>
                You must define a product for everything you sell or purchase,
                whether it's a storable product, a consumable or a service.
            </p>
        </field>
    </record>
</odoo>
