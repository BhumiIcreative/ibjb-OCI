<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Define a new form view for the oci helpdesk ticket type model -->
    <record id="helpdesk_oci_helpdesk_ticket_type_form_view" model="ir.ui.view">
        <field name="name">helpdesk.oci.helpdesk.ticket.type.form.view</field>
        <field name="model">oci.helpdesk.type.ticket</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="oci_helpdesk_type_ticket">
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="studio_group_af9ef6_left"/>
                        <group name="studio_group_af9ef6_right"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <!--
        Action window for managing helpdesk ticket types, with both tree and form views.
    -->
    <record id="action_type_de_ticket" model="ir.actions.act_window">
        <field name="name">Type de ticket</field>
        <field name="res_model">oci.helpdesk.type.ticket</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="help"><![CDATA[<p class="o_view_nocontent_smiling_face">
                        This is your new action; by default, it contains a list view and a form view.
                    </p>
                    <p>
                        You can start customizing these screens by clicking on the Studio icon on the
                        top right corner (you can also customize this help message there).
                    </p>
                ]]></field>
        <field name="limit">80</field>
    </record>

    <!--
        Menu item for accessing helpdesk ticket types, linked to the corresponding action.
    -->
    <record id="menu_type_de_ticket" model="ir.ui.menu">
        <field name="action" ref="action_type_de_ticket"/>
        <field eval="False" name="active"/>
        <field name="name">Type de ticket</field>
        <field name="parent_id" ref="helpdesk.menu_helpdesk_root"/>
        <field name="sequence">10</field>
        <field eval="False" name="web_icon"/>
    </record>

</odoo>