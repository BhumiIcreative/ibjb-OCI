<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view for the account_partner_cat model-->
        <record id="account_partner_cat_tree_view" model="ir.ui.view">
            <field name="name">account.partner.cat.tree.view</field>
            <field name="model">account.partner.cat</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Form view for the account_partner_cat model -->
        <record id="account_partner_cat_form_view" model="ir.ui.view">
            <field name="name">account.partner.cat.form.view</field>
            <field name="model">account.partner.cat</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for the account_partner_cat model -->
        <record id="action_account_partner_cat" model="ir.actions.act_window">
            <field name="name">Third Party Accounting Category</field>
            <field name="res_model">account.partner.cat</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>