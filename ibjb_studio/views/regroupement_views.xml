<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Custom Regroupement form view-->
    <record id="regroupement_regroupement_form_view" model="ir.ui.view">
        <field name="name">regroupement.regroupement.form.view</field>
        <field name="model">regroupement.regroupement</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="regroupement">
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                    <group name="group_001ec5">
                        <group name="group_001ec5_left"/>
                        <group name="group_001ec5_right"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--Custom Regroupement tree view-->
    <record id="action_regroupement" model="ir.actions.act_window">
        <field name="name">Regroupement</field>
        <field name="res_model">regroupement.regroupement</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                This is your new action ; by default, it contains a list view and a form view.
            </p>
            <p>
                You can start customizing these screens by clicking on the Studio icon on the
                top right corner (you can also customize this help message there).
            </p>
        </field>
    </record>
    <!--custom menu-->
    <menuitem action="action_regroupement" id="ibjb_regroupement" parent="contacts.res_partner_menu_config"/>
</odoo>