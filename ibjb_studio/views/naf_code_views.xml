<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view for the account_partner_cat model-->
        <record id="naf_code_tree_view" model="ir.ui.view">
            <field name="name">naf.code.tree.view</field>
            <field name="model">naf.code</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Form view for the account_partner_cat model -->
        <record id="naf_code_form_view" model="ir.ui.view">
            <field name="name">naf.code.form.view</field>
            <field name="model">naf.code</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for the account_partner_cat model -->
        <record id="action_naf_code" model="ir.actions.act_window">
            <field name="name">NAF Code</field>
            <field name="res_model">naf.code</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>