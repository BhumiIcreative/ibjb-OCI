<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Define a new view that extends the existing sale order form view -->
    <record id="view_sale_order_line_lots_form" model="ir.ui.view">
        <field name="name">view.sale.order.line.lots.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='price_unit']" position="before">
                <!-- Add a field to display the count of lots -->
                <field name="lot_count"/>
                <!-- Add a field to display the lot ID -->
                <field name="lot_id"/>
                <!-- Add a field to display the life date of the lot -->
                <field name="life_date"/>
            </xpath>
           <!-- Add a field to display the Delivery Method -->
            <field name="payment_term_id" position="after">
                <field name="carrier_id"/>
            </field>
             <!-- Add a field to display the Purchase order reference -->
            <field name="client_order_ref" position="before">
                <field name="x_studio_purchase_order_reference" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>
